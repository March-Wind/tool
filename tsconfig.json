{
  "ts-node": {
    "transpileOnly": true,
    "moduleTypes": {
      "src/**/*": "esm",
      "src": "esm"
    }
  },
  "compilerOptions": {
    "module": "esnext",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "./lib",
    "jsx": "react",
    "baseUrl": "./",
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "exclude": [
    "node_modules",
    "lib"
  ],
  "include": [
    "**/*"
  ]
}