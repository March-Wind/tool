{
  "resolveJsonModule": true,
  "compilerOptions": {
    "module": "es2015",
    "declaration": true,
    "declarationDir": "../lib/types",
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "target": "esnext",
    "sourceMap": false,
    "outDir": "../lib",
    "jsx": "react",
    "rootDir": "../src",
    "baseUrl": "../src",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "strict": true,
    "lib": [
      "DOM"
    ],
    "paths": {
      "@/*": [
        "../src/*"
      ]
    },
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": [
    "../node_modules",
    "../lib",
    "../jest.config.ts",
    "../__tests__",
    "../public"
  ],
  "include": [
    "../**/*"
  ]
}
